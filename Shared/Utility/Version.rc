#include "Version.hpp"

#ifdef SAO_DEBUG
	#define SAO_FILEFLAGS 0x1L
#else
	#define SAO_FILEFLAGS 0x0L
#endif

#define RCVersionInfo(fileType, intName, origName) \
VS_VERSION_INFO VERSIONINFO \
 FILEVERSION SAO_VERSION_COMMA_RC \
 PRODUCTVERSION SAO_VERSION_COMMA_RC \
 FILEFLAGSMASK 0x3FL \
 FILEFLAGS SAO_FILEFLAGS \
 FILEOS 0x40004L \
 FILETYPE fileType \
 FILESUBTYPE 0x0L \
BEGIN \
    BLOCK "StringFileInfo" \
    BEGIN \
        BLOCK "040904b0" \
        BEGIN \
            VALUE "CompanyName", "San Andreas Online" \
            VALUE "FileDescription", "San Andreas Online Component" \
            VALUE "FileVersion", SAO_VERSION_STR_RC \
            VALUE "InternalName", intName \
            VALUE "LegalCopyright", "Copyright (C) 2015-2016 The San Andreas Online Open Source Project" \
            VALUE "OriginalFilename", origName \
            VALUE "ProductName", "San Andreas Online" \
            VALUE "ProductVersion", SAO_VERSION_STR_RC \
        END \
    END \
    BLOCK "VarFileInfo" \
    BEGIN \
        VALUE "Translation", 0x409, 1200 \
    END \
END

#define SAOVersionEXE(intName) RCVersionInfo(0x1L, intName, intName ".exe")
#define SAOVersionDLL(intName) RCVersionInfo(0x2L, intName, intName ".dll")
